{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier", "node"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "parser": "flow"
            }
          ],
        "no-unused-vars": "warn",
        "semi": ["error", "always"],
        "no-console": "off",
        "func-names": "off",
        "import/newline-after-import": ["error", { "count": 1 }]
    }
}
